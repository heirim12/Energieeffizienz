<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.fragments.FragmentDiagram">

    <LinearLayout
        android:id="@+id/fragment_diagram_mainLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/fragment_diagram_pressicon_padding_right"
            android:paddingTop="@dimen/fragment_diagram_pressicon_padding_top"
            app:srcCompat="@drawable/ic_diagram_table_press_icon"
            android:layout_gravity="right"/>

        <TextView
            android:text="@string/fragment_diagram_starttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="@dimen/fragment_diagram_layout_margin"
            android:paddingTop="@dimen/fragment_diagram_pressicon_padding_top"/>
    </LinearLayout>
</FrameLayout>
